<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/article_img"
        android:layout_width="120dp"
        android:layout_centerVertical="true"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon"/>
    
    <TextView
        android:id="@+id/article_title"
        android:layout_toRightOf="@id/article_img"
        android:layout_alignTop="@id/article_img"
        android:layout_marginLeft="5dp"
        android:textColor="@color/has_read_text_color"
        android:textSize="18sp"
        android:text=""
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/article_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/article_title"
        android:layout_below="@id/article_title"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/article_from1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#f54343"
	        android:textSize="10sp"
	        android:text="读者文摘"/>
	    <TextView
	        android:id="@+id/article_from2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:textColor="#f54343"
	        android:textSize="10sp"
	        android:text="读者文摘"/>

	    <TextView
	        android:id="@+id/article_from3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:textColor="#f54343"
	        android:textSize="10sp"
	        android:text="读者文摘"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/article_title"
        android:layout_marginTop="4dp"
        android:textColor="#999999"
        android:textSize="10sp"
        android:text="2015-02-20"/>
    
    <TextView 
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_tags"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/article_title"
        android:maxLines="2"
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>

</RelativeLayout>
